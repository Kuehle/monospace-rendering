{
    "compilerOptions": {
        "module": "commonjs",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true,
        "inlineSourceMap": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "target": "es2015",
        "lib": ["esnext"],
        "declaration": true,
        "outDir": "dist"
    },
    "include": ["src"],
    "exclude": ["src/**/__tests__", "src/**/__mocks__"]
}

{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "lib": ["esnext"],
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true,
        "inlineSourceMap": true,
        "skipLibCheck": true,
        "declaration": true,
        "outDir": "dist",
        "resolveJsonModule": true
    },
    "include": ["src"],
    "exclude": ["src/**/__tests__", "src/**/__mocks__"]
}
